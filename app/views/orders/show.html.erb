<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  
  <div class="order-summary jumbotron">
    <h2>Thank you for shopping with us, <%= @order.email %>!</h2>
  </div>

  <div style="padding-bottom: 10px;">
    <h3 style="color: orange;">ORDER SUMMARY</h3>

    <% @order.line_items.each do |item| %>
      <%= render 'item', product: item.product %>
    <% end %>
      
    <p style="font-weight: bold;">Total: <%= humanized_money_with_symbol @order.total_cents / 100 %></p>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
